<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/bootstrap.min.css">

  <title>Lista Livros</title>
</head>
<body>
  <div class="container w-50 mt-4">
    <div class="card">
      <div class="card-header">
        <h1 class="text-center text-black-50">Lista Livros</h1>
      </div>
      <div class="card-body text-secondary">
        <form method="GET" action="/">
          <div class="mb-3">
            <input class="form-control" type="text" name="name" placeholder="Informe o nome da lista" required>
          </div>

          <div class="mb-3">
            <input class="form-control" type="text" name="url" placeholder="Informe a url" required>
          </div>

          <div class="d-md-flex justify-content-md-end">
            <button class="btn btn-secondary"> Adicionar </button>
          </div>

        </form>

        <% if(sitesList && sitesList.length) { %>

          <ol class="list-group list-group-numbered mt-3">

            <% for(let site of sitesList){ %>

              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-auto">
                  <div class="fw-bold"><%= site.name %></div>
                  <a href="<%= site.url %>" target="_blank" rel="noopener noreferrer"> <%= site.url %> </a>
                </div>
              </li>
            <% } %>
          </ol>
        <% } %>
      </div>
    </div>
  </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
  integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
  integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
<script src="/js/bootstrap.min.js"></script>
</html>